
<!DOCTYPE html>
<html lang="ru">
<head>
    <meta charset="UTF-8">
    <meta name="viewport"
          content="width=device-width, user-scalable=no, initial-scale=1.0, maximum-scale=1.0, minimum-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <title>Кредитный калькулятор</title>
</head>
<body>
     <ul>
        <li>если клиенту нет 18 лет, то кредит он не получит</li>
        <li>если клиенту от 18 до 21, то он может получить максимум 50000</li>
        <li>если клиенту от 22 до 35, то он сможет получить максимум 400000</li>
        <li>если клиенту от 36 до 65, то ему одобрят максимум 1000000</li>
        <li>кредит могут выдавать суммами кратными 10000.</li>
    </ul>
    <script>
        // Запрашиваем возраст пользователя
        let age = prompt("Введите ваш возраст:");

        // Проверяем, является ли введенное значение числом
        if (isNaN(age) || age === null || age.trim() === "") {
            alert("Пожалуйста, введите корректный возраст.");
        } else {
            age = Number(age); // Приводим к числу

            let maxCredit;

            // Определяем максимальную сумму кредита в зависимости от возраста
            if (age < 18) {
                alert("Кредит вы не получите.");
            } else if (age >= 18 && age <= 21) {
                maxCredit = 50000;
            } else if (age >= 22 && age <= 35) {
                maxCredit = 400000;
            } else if (age >= 36 && age <= 65) {
                maxCredit = 1000000;
            } else {
                alert("Кредит не может быть выдан лицам старше 65 лет.");
            }

            // Запрашиваем сумму кредита
            let creditAmount = prompt(`Вы можете получить максимум ${maxCredit} рублей. Введите сумму кредита (кратную 1000):`);

            // Проверяем, является ли введенное значение числом
            if (isNaN(creditAmount) || creditAmount === null || creditAmount.trim() === "") {
                alert("Пожалуйста, введите корректную сумму кредита.");
            } else {
                creditAmount = Number(creditAmount); // Приводим к числу

                // Проверяем, соответствует ли сумма условиям
                if (creditAmount > maxCredit) {
                    alert(`Вы не можете получить сумму больше ${maxCredit} рублей.`);
                } else if (creditAmount % 1000 !== 0) {
                    alert("Сумма кредита должна быть кратной 1000.");
                } else {
                    alert(`Мы можем вам выдать ${creditAmount} рублей.`);
                }
            }
        }
    </script>
</body>

</html>
